<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_money"
    android:layout_width="340dp"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginStart="24dp"
    android:orientation="vertical"
    tools:context=".fragment_money">

        <LinearLayout
            android:id="@+id/header_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_burger"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_picProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/image_profile"/>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/black"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_cardInformation"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <ImageView
                    android:id="@+id/iv_listBills"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_list_bills"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="9 Oktober 2025"
                    android:gravity="center"
                    android:textAlignment="viewEnd"
                    android:layout_toRightOf="@id/iv_listBills"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:text="Rp. 20.000.000"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_below="@+id/iv_listBills"/>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Alhamdulillah uang banyak"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="18sp"
                    android:layout_below="@id/tv_amount" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_transaction"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_background"
        app:tabIndicator="@null"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/white"
        android:padding="4dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Income" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Outcome" />

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_transactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>