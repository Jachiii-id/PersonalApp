<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".money.otherMoney.InputMoneyActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/secondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_inputMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Input Keuangan"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginEnd="48dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Input Tanggal -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:id="@+id/ll_date_picker"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/et_desain"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:clickable="true"
        android:focusable="true">

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:hint="Pilih Tanggal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:focusable="false"
            android:clickable="true" />

    </LinearLayout>

    <!-- Input Jumlah Uang -->
    <TextView
        android:id="@+id/tv_jumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Uang"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/et_jumlah"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Rp. 0"
        android:background="@drawable/et_desain"
        android:textColor="@color/black"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="numberDecimal" />

    <!-- Jenis Transaksi -->
    <TextView
        android:id="@+id/tv_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:id="@+id/spn_jenis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_desain"
        android:padding="8dp" />

    <!-- Kategori Transaksi -->
    <TextView
        android:id="@+id/tv_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:id="@+id/spn_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_desain"
        android:padding="8dp" />

    <!-- Input Instrumen -->
    <TextView
        android:id="@+id/tv_inputInstrumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrumen"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/et_instrumen"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ovo"
        android:background="@drawable/et_desain"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/et_notes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Untuk apa?"
        android:background="@drawable/et_desain"
        android:textColor="@color/black"
        android:gravity="top|start"
        android:padding="12dp"
        android:textSize="16sp" />

    <!-- Tombol Simpan -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:textSize="16sp" />

</LinearLayout>